{
  "manifest_version": 3,
  "name": "Sonarr ReConnect",
  "description": "Show upcoming/missing episodes, your series and history from Sonarr",
  "version": "2.0.0",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "action": {
    "default_icon": "72.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
